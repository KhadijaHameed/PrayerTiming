<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="NavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/ActiveText</item>
        <item name="itemTextAppearanceInactive">@style/InactiveText</item>
    </style>

    <style name="ActiveText">
        <item name="android:textColor">@color/green</item>
        <item name="fontFamily">@font/akaya_telivigala</item>
    </style>

    <style name="InactiveText">
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/grey</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="colorOnPrimary">@color/white</item>

    </style>

    <style name="llTodayPrayer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_60sdp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="iconTodayPrayer">
        <item name="android:layout_marginStart">@dimen/_40sdp</item>
        <item name="android:layout_width">@dimen/_60sdp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
    </style>

    <style name="textTodayPrayer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/akaya_telivigala</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/_20sdp</item>
    </style>

    <style name="timeTodayPrayer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/akaya_telivigala</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:text">....</item>
        <item name="android:layout_marginEnd">@dimen/_40sdp</item>
        <item name="android:gravity">center_vertical|end</item>
    </style>

    <style name="MaterialAlertDialogText">
        <item name="android:textColor">@color/green</item>
        <item name="fontFamily">@font/akaya_telivigala</item>
        <item name="android:textSize">18sp</item>

    </style>
</resources>